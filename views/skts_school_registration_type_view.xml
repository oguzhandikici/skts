<odoo>
    <record model="ir.ui.view" id="skts_school_registration_type_view_tree">
        <field name="name">skts.school.registration.type.tree</field>
        <field name="model">skts.school.registration.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="skts_school_registration_type_action">
        <field name="name">School Term Types</field>
        <field name="res_model">skts.school.registration.type</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="skts_school_registration_type_menu"
              name="School Registration Types"
              action="skts_school_registration_type_action"
              sequence="72"
              parent="skts_configuration_menu"/>

</odoo>
