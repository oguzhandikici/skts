<odoo>
    <record model="ir.ui.view" id="skts_person_view_tree">
        <field name="name">skts.person.tree</field>
        <field name="model">skts.person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="birth_year"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="district"/>
                <field name="contact_ids"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="skts_person_view_form">
        <field name="name">skts.person.form</field>
        <field name="model">skts.person</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>

                    <group>
                        <group>
                            <field name="name"/>
                            <field name="surname"/>
                            <field name="birth_year"/>
                            <field name="phone" widget="phone"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="district"/>
                            <field name="note"/>
                        </group>
                    </group>
                    <group string="Contacts">
                        <field name="contact_ids" colspan="2" nolabel="1">
                            <tree editable="bottom">
                                <control>
                                    <create string="Add a Contact"/>
                                </control>
                                <field name="type"/>
                                <field name="name"/>
                                <field name="surname"/>
                                <field name="phone" widget="phone"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="skts_person_action">
        <field name="name">Persons</field>
        <field name="res_model">skts.person</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="skts_person_menu"
              name="Persons"
              action="skts_person_action"
              sequence="52"
              parent="skts_configuration_menu"/>

</odoo>
