<odoo>
    <record model="ir.ui.view" id="skts_registration_view_tree">
        <field name="name">skts.registration.tree</field>
        <field name="model">skts.registration</field>
        <field name="arch" type="xml">
            <tree expand="1" duplicate="0"
                  decoration-primary="state=='awaiting_registration'" decoration-bf="state=='awaiting_registration'"
                  decoration-success="state=='registered'"
                  decoration-muted="state=='cancelled'"
                  decoration-danger="state=='rejected'"
            >
                <field name="name"/>
                <field name="place_id"/>
                <field name="place_term_ids" widget="many2many_tags"/>
                <field name="type_id"/>
                <field name="state" invisible="1"/>
                <field name="create_date" widget="date"/>
                <field name="write_date" widget="date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="skts_registration_view_form">
        <field name="name">skts.registration.form</field>
        <field name="model">skts.registration</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <header>
                    <button name="approve" string="Approve" type="object" class="btn-success"
                            icon="fa-check"
                            confirm="Are you sure approving this registration?"
                            attrs="{'invisible':[('state','not in',['awaiting_registration','rejected'])]}"/>
                    <button name="reject" string="Reject" type="object" class="btn-danger"
                            icon="fa-times"
                            confirm="Are you sure rejecting this registration?"
                            attrs="{'invisible':[('state','not in',['awaiting_registration'])]}"/>
                    <button name="reject" string="Cancel" type="object" class="btn-secondary"
                            icon="fa-ban"
                            confirm="Are you sure cancelling this registration?"
                            attrs="{'invisible':[('state','not in',['registered'])]}"/>

                    <field name="state" widget="statusbar" statusbar_visible="awaiting_registration,registered"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="place_id" placeholder="Type a place name and select..."
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True, 'no_create': True}"
                                   style="font-size: min(4vw, 2.6rem); width: 150%;"/>
                        </h1>
                    </div>

                    <group>


                        <group string="Person Information">

                            <field name="name"/>
                            <field name="birth_year"/>
                            <field name="phone"/>
                            <field name="district"/>
                            <field name="neighbourhood"/>
                            <field name="address"/>
                            <field name="note"/>

                            <field name="contact_ids">
                                <tree editable="bottom" no_open="1">
                                    <control>
                                        <create string="Add a Contact"/>
                                    </control>

                                    <field name="type"/>
                                    <field name="name"/>
                                    <field name="phone" widget="phone"/>
                                </tree>
                            </field>
                        </group>


                        <group string="Registration Information">
                            <field name="type_id"
                                   domain="[('place_id', '=', place_id)]"
                                   attrs="{'invisible':[('place_id','=',False)]}"
                                   force_save="1"
                                   options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True, 'no_create': True}"/>

                            <field name="place_term_ids"
                                   attrs="{'invisible':[('place_id','=',False)]}"
                                   context="{'tree_view_ref': 'skts.skts_place_term_registration_view_tree'}">
                                <tree create="0" no_open="1">
                                    <control>
                                        <create string="Add Terms"/>
                                    </control>
                                    <field name="name"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                </tree>
                            </field>


                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="skts_registration_view_filter">
        <field name="name">skts.registration.filter</field>
        <field name="model">skts.registration</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="General Search"
                       filter_domain="['|',
                       ('place_id.name','ilike',self),
                       ('name','ilike',self),
                       ]"/>
                <filter name="filter_show_passives_too" string="Show Passive Records Also"
                        domain="[('active','in',[True,False])]"/>
                <separator/>

                <group expand="1" string="Group By">
                    <filter name="group_place" string="Place" context="{'group_by':'place_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="skts_registration_action">
        <field name="name">Registrations</field>
        <field name="res_model">skts.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'search_default_group_place': 1,
            }
        </field>
    </record>

    <menuitem id="skts_registration_menu"
              name="Registration"
              action="skts_registration_action"
              sequence="45"
              parent="skts_root_menu"/>

</odoo>
