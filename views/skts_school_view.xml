<odoo>
    <record model="ir.ui.view" id="skts_school_view_tree">
        <field name="name">skts.school.tree</field>
        <field name="model">skts.school</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="term_ids"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="skts_school_view_form">
        <field name="name">skts.school.form</field>
        <field name="model">skts.school</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" placeholder="Enter School Name..." style="font-size: min(4vw, 2.6rem);"/>
                        </h1>
                    </div>
                    <group>

                        <group/>

                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group string="Terms">
                        <field name="term_ids" colspan="2" nolabel="1">
                            <tree editable="bottom">
                                <control>
                                    <create string="Add a Term"/>
                                </control>
                                <field name="name" placeholder="Enter a term name (Ex: 1st Term)..."/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="skts_school_action">
        <field name="name">Schools</field>
        <field name="res_model">skts.school</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="skts_school_menu"
              name="Schools"
              action="skts_school_action"
              sequence="51"
              parent="skts_menu_root"/>

</odoo>
