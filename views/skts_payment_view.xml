<odoo>
    <record model="ir.ui.view" id="skts_payment_view_tree">
        <field name="name">skts.payment.tree</field>
        <field name="model">skts.payment</field>
        <field name="arch" type="xml">
            <tree decoration-warning="date==False" decoration-bf="id!=False" decoration-success="date!=False">
                <control>
                    <create string="Add a Payment"/>
                </control>
                <field name="sequence" widget="handle"/>
                <field name="price"/>

                <field name="name"/>
                <field name="date"/>

                <field name="type" attrs="{'readonly':[('date','=',False)]}"/>

            </tree>
        </field>
    </record>


    <record model="ir.ui.view" id="skts_payment_view_form">
        <field name="name">skts.payment.form</field>
        <field name="model">skts.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="name"/>
                        <field name="date"/>
                        <field name="type" attrs="{'invisible':[('date','=',False)], 'readonly':[('date','=',False)], 'required':[('date','!=',False)]}"/>

                        <field name="sequence" attrs="{'invisible':[('id','=',False)]}"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="skts_payment_action">
        <field name="name">Payments</field>
        <field name="res_model">skts.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_registration_id': active_id}</field>
        <field name="domain">[('registration_id', '=', active_id)]</field>
    </record>


</odoo>
