<odoo>
    <record model="ir.ui.view" id="view_test_modulu_users_tree">
        <field name="name">test.modulu.users.tree</field>
        <field name="model">test_modulu.users</field>
        <field name="arch" type="xml">
            <tree duplicate="0" string="Test Modulu Users">
                <field name="user_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_test_modulu_users_form">
        <field name="name">test.modulu.users.form</field>
        <field name="model">test_modulu.users</field>
        <field name="arch" type="xml">
            <form string="Test Modulu Users Form">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" options="{'no_create': True,'no_open': True,'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="password" password="1" attrs="{'invisible': [('reveal_pw', '=', True)]}"/>
                            <field name="revealed_pw" attrs="{'invisible': [('reveal_pw', '=', False)]}"/>
                            <field name="reveal_pw" attrs="{'invisible': [('id', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_test_modulu_users">
        <field name="name">Test Modulu Users</field>
        <field name="res_model">test_modulu.users</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="test_modulu_users_menu"
              name="Users"
              action="action_test_modulu_users"
              sequence="50"
              parent="test_modulu_menu_root"
    />

</odoo>
